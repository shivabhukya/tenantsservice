{
  "compilerOptions": {
    
    "target": "es2016", 

    
    "module": "commonjs",
 
    "outDir": "./dist",
    "rootDir": "./src", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
   
    "skipLibCheck": true 
  },
  "include": ["src/**/*.ts"],
}